<%= link_to "Edit", edit_blog_post_path(@blog_post) if user_signed_in? %>

<section class="relative bg-black">
  <div class="absolute inset-0 overflow-hidden z-0">
    <div class="absolute top-0 left-0 w-64 h-64 bg-gradient-to-br from-green-400 to-blue-500 opacity-50 blur-xl"></div>
    <div class="absolute top-1/2 left-1/3 w-96 h-96 bg-gradient-to-r from-yellow-400 to-red-500 opacity-50 blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-72 h-72 bg-gradient-to-tl from-purple-400 to-pink-500 opacity-50 blur-2xl"></div>
  </div>
  <div class="relative z-10 text-white pt-12 pr-0 pb-14 pl-0 bg-black bg-opacity-80">
    <div class="w-full pt-4 pr-5 pb-6 pl-5 mt-0 mr-auto mb-0 ml-auto space-y-5 sm:py-8 md:py-12 sm:space-y-8 md:space-y-16 max-w-7xl">
      <div class="flex flex-col items-center sm:px-5 md:flex-row">
        <div class="flex flex-col items-start justify-center w-full h-full pt-6 pr-0 pb-6 pl-0 mb-6 md:mb-0 md:w-1/2">
          <div class="flex flex-col items-start justify-center h-full space-y-3 transform md:pr-10 lg:pr-16 md:space-y-5">
            <h1 class="text-3xl font-bold leading-none lg:text-4xl xl:text-5xl"><%= @blog_post.title %></h1>
            <p class="text-sm text-gray-300"><%= @blog_post.published_at.strftime('%d %b %Y') if @blog_post.published_at %></p>
            <p class="text-xl text-gray-300"><%= @blog_post.summary %></p>
          </div>
        </div>
        <div class="w-full md:w-1/2 sm:w-1/4">
          <div class="block">
            <%= image_tag @blog_post.cover_image, class: "object-cover rounded-lg max-h-64 sm:max-h-96 w-full h-full" if @blog_post.cover_image.present? %>
          </div>
        </div>
      </div>
      <div class="prose max-w-5xl sm:prose-sm md:prose-sm lg:prose-md xl:prose-lg text-white">
        <%= @blog_post.content %>
      </div>
    </div>
  </div>
</section>
